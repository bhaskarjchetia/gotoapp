<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>Dashboard</h1>
        </header>
        <main>
            <section>
                <div class="dashboard-header">
                    <h2>Connected GoTo Accounts</h2>
                    <div class="dashboard-actions">
                        <a href="/oauth/authorize" class="btn btn-primary">Add New Account</a>
                        <a href="/logout" class="btn btn-secondary">Logout</a>
                    </div>
                </div>
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Account Name</th>
                                <th>Email</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (accounts.length === 0) { %>
                                <tr>
                                    <td colspan="3">No accounts connected yet.</td>

                                </tr>
                            <% } else { %>
                                <% accounts.forEach(account => { %>
                                <tr>
                                      <td><%= account.name %></td>
                                      <td><%= account.userEmail %></td>
                                      <td>
                                        <a href="/recordings/<%= account.id %>" class="btn btn-primary btn-sm">View Recordings</a>
                                        <button class="btn btn-danger btn-sm disconnect-btn" data-account-id="<%= account.id %>">Disconnect</button>
                                      </td>
                                  </tr>
                                <% }); %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </section>
        </main>
    </div>
    <script>
        document.querySelectorAll('.disconnect-btn').forEach(button => {
            button.addEventListener('click', async (event) => {
                const accountId = event.target.dataset.accountId;
                if (confirm('Are you sure you want to disconnect this account?')) {
                    try {
                        const response = await fetch('/disconnect-account', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ accountId })
                        });
                        const data = await response.json();
                        if (data.success) {
                            alert(data.message);
                            window.location.reload();
                        } else {
                            alert(data.message);
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        alert('An error occurred while disconnecting the account.');
                    }
                }
            });
        });
    </script>
</body>
</html>